					"script": {
						"exec": [
							"pm.test(\"[Task2] Content Creation - Status Code 201\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test(\"[Task2] Content Creation - Response Structure\", function () {",
							"    const responseJson = pm.response.json();",
							"    ",
							"    // 필수 필드들을 배열로 정의 (camelCase, snake_case 둘 다)",
							"    const requiredFields = [",
							"        ['contentId', 'content_id'],",
							"        ['createdAt', 'created_at'], ",
							"        ['updatedAt', 'updated_at']",
							"    ];",
							"    ",
							"    requiredFields.forEach(fieldOptions => {",
							"        const hasField = fieldOptions.some(field => responseJson.hasOwnProperty(field));",
							"        pm.expect(hasField).to.be.true;",
							"    });",
							"});"
						],
						"type": "text/javascript",
